{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Company",
  "type": "object",
  "properties": {
    "companyName": {
      "type": "string"
    },
    "companyType": {
      "type": "string"
    },
    "country" : {
      "type": "string"
    },
    "document_pages" : {
      "type": "number"
    },
    "documentType": {
      "type": "string",
      "description": "Type of document, (NIT, RUC, RUT, etc)"
    },
    "taxId": {
      "type": "string",
      "pattern": "^[0-9.\\-]+$"
    },
    "mainAddress": {
      "type": "string"
    },
    "incorporationDate": {
      "type": "string",
      "format": "date"
    },
    "companyDuration": {
      "type": "string",
      "format": "date"
    },
    "registrationNumber": {
      "type": "string"
    },
    "size": {
      "type": "string"
    },
    "relatedParties": {
      "type": "array",
      "items": {
        "oneOf": [
          { "$ref": "#/$defs/PersonRelatedParty" },
          { "$ref": "#/$defs/CompanyRelatedParty" }
        ]
      }
    },
    "embargoes": {
      "type": "string"
    },
    "liquidations": {
      "type": "string"
    },
    "documentIssueDate": {
      "type": "string",
      "format": "date"
    },
    "lastRegistrationRenewalDate": {
      "type": "string",
      "format": "date"
    }
  },
  "required": [
    "companyName",
    "documentType",
    "country",
    "taxId",
    "mainAddress",
    "incorporationDate",
    "companyDuration",
    "registrationNumber",
    "size",
    "relatedParties"
  ],
  "additionalProperties": false,
    "$defs": {
    "CommonFields": {
      "type": "object",
      "properties": {
        "identificationType": { "type": "string" },
        "identificationNumber": {
          "type": "string",
          "pattern": "^[0-9A-Za-z.\\-]+$"
        },
        "relationshipType": { "type": "string" }
      },
      "required": [
        "relationshipType"
      ],
      "additionalProperties": false
    },
    "PersonRelatedParty": {
      "allOf": [
        { "$ref": "#/$defs/CommonFields" },
        {
          "type": "object",
          "properties": {
            "firstName": { "type": "string" },
            "lastName":  { "type": "string" }
          },
          "required": ["firstName", "lastName"],
          "additionalProperties": false
        }
      ]
    },
    "CompanyRelatedParty": {
      "allOf": [
        { "$ref": "#/$defs/CommonFields" },
        {
          "type": "object",
          "properties": {
            "companyName": { "type": "string" }
          },
          "required": ["companyName"],
          "additionalProperties": false
        }
      ]
    }
  }
}